<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dircetion_active_main_r1_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/dircetion_active_main_btq_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dircetion_active_main_btq_name"
        android:layout_centerInParent="true"
        android:text="向前" />

    <Button
        android:id="@+id/dircetion_active_main_btz_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/dircetion_active_main_btq_name"
        android:layout_below="@+id/dircetion_active_main_btq_name"
        android:text="向左" />

    <Button
        android:id="@+id/dircetion_active_main_bty_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     	android:layout_toRightOf="@+id/dircetion_active_main_btq_name"
        android:layout_below="@+id/dircetion_active_main_btq_name"
        android:text="向右" />

    <Button
        android:id="@+id/dircetion_active_main_bth_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dircetion_active_main_btz_name"
        android:layout_centerInParent="true"
        android:text="向后" />
    

</RelativeLayout>